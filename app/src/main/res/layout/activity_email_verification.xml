<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmailVerificationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_emailverification" />

            <TextView
                android:id="@+id/idTextViewVerifyMobileNewMobileVerificationActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify Your Email ID"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/idTextViewVerifyMobileMessageNewMobileVerificationActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center"
                android:text="Please Enter OTP send on your email"
                android:textColor="#231F20"
                android:textSize="16sp" />

            <com.alimuzaffar.lib.pin.PinEntryEditText
                android:id="@+id/idPinEntryEditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="6"
                android:textIsSelectable="false"
                android:textSize="20sp"
                app:pinAnimationType="fromBottom"
                app:pinCharacterSpacing="12dp" />

            <!--            <com.google.android.material.button.MaterialButton-->
            <!--                android:id="@+id/idButtonVerifyEmailVerificationActivity"-->
            <!--                style="@style/ShapeAppearance.MaterialComponents.LargeComponent"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="24dp"-->
            <!--                android:layout_marginTop="64dp"-->
            <!--                android:layout_marginRight="24dp"-->
            <!--                android:layout_marginBottom="32dp"-->
            <!--                android:layout_weight="5"-->
            <!--                android:insetTop="1dp"-->
            <!--                android:insetBottom="1dp"-->
            <!--                android:text="Verify"-->
            <!--                android:textSize="16sp"-->
            <!--                app:cornerRadius="0dp"-->


            <!--                />-->



        </LinearLayout>



    </ScrollView>

    <TextView
        android:id="@+id/idTextViewCheckEmailEmailVerificationActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idButtonBackToHomeEmailVerificationActivity"
        android:text="Check Your Email for OTP"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp"
        android:layout_centerInParent="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idButtonBackToHomeEmailVerificationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        app:rippleColor="#ffff"
        android:layout_alignParentBottom="true"
        android:text="Back to home"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        />

</RelativeLayout>